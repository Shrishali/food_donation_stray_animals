<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout1"
    tools:openDrawer="start"
    android:fitsSystemWindows="true"
    tools:context=".Donorpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/headerbackground"
            android:elevation="4dp"
            android:theme="@style/Theme.AppCompat.Dialog.MinWidth" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/design_default_color_background">


            <Button
                android:id="@+id/Donate"
                android:layout_width="181dp"
                android:layout_height="72dp"
                android:background="@drawable/round_border"
                android:text="Donate"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.648" />

            <Button
                android:id="@+id/historyBtn"
                android:layout_width="181dp"
                android:layout_height="72dp"
                android:background="@drawable/round_border"
                android:text="History"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.802" />

            <Button
                android:id="@+id/statusbtn"
                android:layout_width="182dp"
                android:layout_height="71dp"
                android:background="@drawable/round_border"
                android:text="Status"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.951" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="336dp"
                android:layout_height="54dp"
                android:gravity="center_horizontal"
                android:text="Donate Food, Save Life!"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.025" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="311dp"
                android:layout_height="294dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.22"
                app:srcCompat="@drawable/savelife" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/headerdonar"
        app:menu="@menu/menudonor"
        android:id="@+id/nav_view1"
        app:itemIconTint="@drawable/navigation_selector"

        android:layout_gravity="start"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>




</androidx.drawerlayout.widget.DrawerLayout>





